#!/bin/bash

# Login into tty1 to launch Hyprland

if [[ -z $DISPLAY ]] && [[ -z "$WAYLAND_DISPLAY" ]] && [[ "$(tty)" = /dev/tty1 ]] && [[ -z $SSH_CONNECTION ]]; then
	printf "\n\n"

	cat <<"EOF"
____    __    ____  _______  __        ______   ______   .___  ___.  _______
\   \  /  \  /   / |   ____||  |      /      | /  __  \  |   \/   | |   ____|
 \   \/    \/   /  |  |__   |  |     |  ,----'|  |  |  | |  \  /  | |  |__
  \            /   |   __|  |  |     |  |     |  |  |  | |  |\/|  | |   __|
   \    /\    /    |  |____ |  `----.|  `----.|  `--'  | |  |  |  | |  |____
    \__/  \__/     |_______||_______| \______| \______/  |__|  |__| |_______|

.______        ___       ______  __  ___
|   _  \      /   \     /      ||  |/  /
|  |_)  |    /  ^  \   |  ,----'|  '  /
|   _  <    /  /_\  \  |  |     |    <
|  |_)  |  /  _____  \ |  `----.|  .  \   __
|______/  /__/     \__\ \______||__|\__\ (_ )
                                          |/
.___  ___.      ___           _______.___________. _______ .______
|   \/   |     /   \         /       |           ||   ____||   _  \
|  \  /  |    /  ^  \       |   (----`---|  |----`|  |__   |  |_)  |
|  |\/|  |   /  /_\  \       \   \       |  |     |   __|  |      /
|  |  |  |  /  _____  \  .----)   |      |  |     |  |____ |  |\  \----.__
|__|  |__| /__/     \__\ |_______/       |__|     |_______|| _| `._____(__)
EOF

	printf "\n\n"

	printf "Starting Hyprland in "
	sleep 1
	printf "3, "
	sleep 1
	printf "2, "
	sleep 1
	printf "1..."
	sleep 1

	exec Hyprland

	logout                                     # Prevent an endless loop in case Hyprland fails to launch

fi
